#include <iostream>

using namespace std;
int main(){
    int a,b;
    char op;

    cout<<"1. addition\n"<<"2. Substraction\n"<<"3. Multiplication\n"<<"4. Division\n"<<"Select Operation do you want to perform:(+,-,*,/)";
    cin>>op;
    cout<<"enter 1st No.";
    cin>>a;
    cout<<"enter 2nd No.";
    cin>>b;

    switch(op)
    {
        case '+':
            cout<<"Result:"<<a+b;
            break;

        case '-':
            cout<<"Result:"<<a-b;
            break;

        case '*':
            cout<<"Result:"<<a*b;
            break;

        case '/':
            cout<<"Result:"<<a/2;
            break;

        default:
            cout<<"Please enter correct operation!!!";
            break;
    }   
}
